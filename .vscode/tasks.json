{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run",
            "type": "shell",
            "command": "g++",
            "args": [
                "-lstdc++",
                "-o",
                "Runge-Kutta.out",
                "Runge-Kutta.cpp",
                "&&",
                "./Runge-Kutta.out"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },

        {
            "label": "compile and run",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-lstdc++",
                "-o",
                "Runge-Kutta.out",
                "Runge-Kutta.cpp"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]

}

